# Configuration DocPDF Manager
# Copiez ce fichier vers .env et configurez vos valeurs

# Base de données MongoDB
MONGO_USERNAME=docpdf_admin
MONGO_PASSWORD=secure_password_change_me
MONGODB_URI=mongodb://docpdf_admin:secure_password_change_me@mongodb:27017/docpdf?authSource=admin

# Base de données vectorielle Qdrant
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# Cache Redis
REDIS_PASSWORD=redis_password_change_me
REDIS_URL=redis://:redis_password_change_me@redis:6379

# Authentification JWT
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production
NEXTAUTH_SECRET=your-nextauth-secret-key-change-me
NEXTAUTH_URL=http://localhost:3000

# APIs LLM (configurez selon vos besoins)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key

# Services internes
BACKEND_URL=http://backend:3001
FRONTEND_URL=http://frontend:3000
DOCLING_SERVICE_URL=http://docling-service:8000

# Stockage
PDF_STORAGE_PATH=/app/storage/pdfs
MARKDOWN_OUTPUT_PATH=/app/output/markdown

# Sécurité
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15

# Environnement
NODE_ENV=development
LOG_LEVEL=info
PYTHONUNBUFFERED=1

# Nginx (pour production)
NGINX_PORT=80
NGINX_SSL_PORT=443

# Monitoring (optionnel)
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
